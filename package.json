{
  "name": "lean-spec-monorepo",
  "version": "0.2.2",
  "private": true,
  "type": "module",
  "description": "Lightweight spec methodology for AI-powered development (monorepo root)",
  "scripts": {
    "build": "pnpm build:templates && pnpm -r build",
    "build:templates": "tsx scripts/build-agents-templates.ts",
    "validate:templates": "tsx scripts/validate-agents-templates.ts",
    "dev": "pnpm --parallel -r dev",
    "typecheck": "pnpm -r typecheck",
    "format": "prettier --write .",
    "test": "pnpm -r test:run",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "docs:dev": "pnpm -F docs-site start",
    "docs:build": "pnpm -F docs-site build",
    "docs:serve": "pnpm -F docs-site serve"
  },
  "keywords": [
    "spec",
    "specification",
    "documentation",
    "ai",
    "agent",
    "sdd"
  ],
  "author": "Marvin Zhang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codervisor/lean-spec.git"
  },
  "homepage": "https://lean-spec.dev",
  "bugs": {
    "url": "https://github.com/codervisor/lean-spec/issues"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "handlebars": "^4.7.8",
    "prettier": "^3.1.1",
    "tsx": "^4.19.2",
    "vitest": "^4.0.6"
  },
  "engines": {
    "node": ">=18"
  }
}
