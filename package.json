{
  "name": "lean-spec",
  "version": "0.1.0",
  "description": "Lightweight spec methodology for AI-powered development",
  "type": "module",
  "bin": {
    "lspec": "./bin/lspec.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "test": "pnpm test:run",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "spec",
    "specification",
    "documentation",
    "ai",
    "agent",
    "sdd"
  ],
  "author": "codervisor",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codervisor/lean-spec.git"
  },
  "homepage": "https://github.com/codervisor/lean-spec#readme",
  "bugs": {
    "url": "https://github.com/codervisor/lean-spec/issues"
  },
  "files": [
    "bin/",
    "dist/",
    "templates/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.2",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "prettier": "^3.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.6"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.9.0",
    "chalk": "^5.3.0",
    "cli-spinners": "^3.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "dayjs": "^1.11.19",
    "gray-matter": "^4.0.3",
    "ink": "^6.4.0",
    "ora": "^9.0.0",
    "react": "^19.2.0"
  },
  "engines": {
    "node": ">=18"
  }
}
