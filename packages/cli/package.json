    "ink-table": "^3.1.0",
    "ink-text-input": "^6.0.0",
    "js-yaml": "^4.1.0",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "open": "^11.0.0",
    "ora": "^9.0.0",
    "react": "^19.2.0",
    "strip-ansi": "^7.1.2",
    "tiktoken": "^1.0.22",
    "tokenx": "^1.2.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@leanspec/core": "workspace:*",
    "@types/js-yaml": "^4.0.9",
    "@types/marked-terminal": "^6.1.1",
    "@types/node": "^20.10.0",
