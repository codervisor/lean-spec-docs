{
  "name": "@leanspec/ui",
  "version": "0.2.5",
  "description": "LeanSpec web UI launcher for visual spec management",
  "type": "module",
  "bin": {
    "leanspec-ui": "./bin/ui.js"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build && node ./scripts/post-build.mjs",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/lib/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/lib/db/seed.ts"
  },
  "files": [
    "bin/",
    ".next/standalone/packages/",
    ".next/standalone/node_modules/.pnpm/",
    ".next/static/",
    "public/",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "leanspec",
    "spec",
    "documentation",
    "cli",
    "ui"
  ],
  "author": "Marvin Zhang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codervisor/lean-spec.git"
  },
  "bugs": {
    "url": "https://github.com/codervisor/lean-spec/issues"
  },
  "homepage": "https://lean-spec.dev",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@dagrejs/dagre": "^1.1.8",
    "@leanspec/core": "workspace:*",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.1.14",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "better-sqlite3": "^11.7.0",
    "chalk": "^5.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.0.0",
    "cmdk": "^1.1.1",
    "commander": "^14.0.2",
    "dayjs": "^1.11.19",
    "drizzle-orm": "^0.38.3",
    "fuse.js": "^7.1.0",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.553.0",
    "next": "16.0.1",
    "next-themes": "^0.4.6",
    "open": "^11.0.0",
    "ora": "^9.0.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-markdown": "^9.0.2",
    "react-window": "^2.2.3",
    "reactflow": "^11.11.4",
    "recharts": "^3.4.1",
    "rehype-highlight": "^7.0.1",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "sonner": "^2.0.7",
    "swr": "^2.3.6",
    "tailwind-merge": "^3.4.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "@types/better-sqlite3": "^7.6.12",
    "@types/mdast": "^4.0.4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/ui": "^4.0.6",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.31.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "vitest": "^4.0.6"
  }
}
